<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (products.length > 0) { %>
        <div class="grid">
            <% for (let product of products) { %>
            <% if(product.productId !== null){ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= product.productId.title %>
                        (<%= product.qty %>)
                    </h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.productId.imageUrl %>" alt="<%= product.productId.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$
                        <%= product.productId.price %>
                    </h2>
                    <p class="product__description">
                        <%= product.productId.description %>
                    </p>
                </div>
                <div class="card__actions">
                    <a class="btn" href="/products/<%=product.productId._id%>">Details</a>
                    <form action="/cart/delete-item" method="POST">
                        <input type="hidden" name="productId" value="<%=product.productId._id%>">
                        <button type="submit" class="btn btn-del">Delete Item</button>
                    </form>
                </div>
            </article>
            <%}%>
            <% } %>

            <form action="/create-order" method="POST">
                <button type="submit" class="btn">Order Now</button>
            </form>
        </div>
        <% } else { %>
        <h1>No Product In the Cart!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>